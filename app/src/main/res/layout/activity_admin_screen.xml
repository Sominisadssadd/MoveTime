<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Добавить фильм"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Имя фильма"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edit_movie_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Возрастной рейтинг"
        android:inputType="number"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edit_movie_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Тип фильма"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edit_movie_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Длительность"
        android:inputType="number"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edit_movie_date_of_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Дата выхода"
        android:padding="12dp" />

    <EditText
        android:id="@+id/editPlaceCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Колличество мест"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edImageURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:hint="Ссылка на постер"
        android:padding="12dp" />


    <Button
        android:id="@+id/save_movie_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Добавить"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
